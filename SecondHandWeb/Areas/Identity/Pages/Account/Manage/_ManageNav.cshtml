@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column bg-danger">
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.InfoProfileNavClass(ViewContext)" id="InfoProfile" asp-page="./InfoProfile">Informações de vendas</a></li>
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.InfoProfileComprasNavClass(ViewContext)" id="InfoProfileCompras" asp-page="./InfoProfileCompras">Informações de Compras</a></li>
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
<li id="external-logins" class="nav-item"><a id="external-login" class="nav-link btn-danger text-warning @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
}
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link btn-danger text-warning @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>

</ul>
