@model Entities.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioIDVendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioIDVendedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioIDComprador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioIDComprador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<div class="row">
    <h3>Imagens</h3>
    <div class="col-md-4">

        
        @foreach (Entities.Models.Imagem im in Model.Imagens)
        {

            <div class="form-group">
                <img width="300"
                     src=@Url.Action("GetImage", "Produtoes", new { id=im.ImagemId})
                     alt=@im.ImageMimeType>
            </div>}

    </div>
</div>

@using (Html.BeginForm("LoadFiles", "Produtoes",
                            FormMethod.Post,
                              new { enctype = "multipart/form-data" }))
{
    <input type="hidden" asp-for="ProdutoId" />
    <dl>
        <dt>
            <label for="FileUpload_FormFile">Selecionar arquivos</label>
        </dt>
        <dd>
            <input id="files" type="file"
                   name="files" multiple />
        </dd>
    </dl>

    <input type="submit" value="Enviar arquivos" class="btn btn-primary" />

    <div style="margin-top:15px">
        <output name="result"></output>
    </div>}
