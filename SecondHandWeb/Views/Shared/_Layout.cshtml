<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClassOps</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark gbg-danger border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand text-warning gbtn-danger" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/icon.png" alt="some text" width=120 height=60>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light gbtn-danger" asp-area="" asp-controller="AulaPresencial" asp-action="Create">Cadastrar Atividade</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light gbtn-danger" asp-area="" asp-controller="AulaPresencial" asp-action="Index">Atividades Cadastradas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light gbtn-danger" asp-area="" asp-controller="Aluno" asp-action="Index">Vagas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light gbtn-danger" asp-area="" asp-controller="Aluno" asp-action="Create">Cadastrar Aluno</a>
                        </li>
                    </ul>
                <partial name="_LoginPartial" />
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;  - <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
